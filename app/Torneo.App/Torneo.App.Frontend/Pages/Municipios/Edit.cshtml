@page
@model Torneo.App.Frontend.Pages.Municipios.EditModel
@{
}
@if (Model.duplicate)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Ocurrio un error al Editar</strong> - El Municipio ya existe en base de datos.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="$('.alert').alert('close')">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<h1>Editar municipio</h1>
@Html.ValidationSummary()
<form method="post">
    <div class="form-group">
        <label asp-for="municipio.Id"></label>
        <input asp-for="municipio.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="municipio.Nombre"></label>
       <!-- <input asp-for="municipio.Nombre" id="NombreMunicipioEditar" minlength="1"  maxlength="30" required  pattern="^[a-zA-ZÀ-ÿ \.]*$" class="form-control"
        title="Campo Obligatorio. Solo letras."/> -->
        <input asp-for="municipio.Nombre" id="NombreMunicipioEditar" class="form-control"/>
        <span class="text-danger" asp-validation-for="municipio.Nombre"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block mb-2 mt-2" id="BtnMunicipioEditar">Editar municipio</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>