@page
@model Torneo.App.Frontend.Pages.Jugadores.EditModel
@{
    ViewData["Title"] = "Editar Jugador";
}
@if (Model.duplicate)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Ocurrio un error al editar</strong> El jugador ya existe en el equipo seleccionado. (No se puede editar un jugar con los mismos datos)
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="$('.alert').alert('close')">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<h1>Editar jugador</h1>
@Html.ValidationSummary()
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <!--<input asp-for="jugador.Nombre" id="NombreJugadorEditar" required maxlength="30" class="form-control" pattern="^[a-zA-ZÀ-ÿ \.]*$" -->
        <input asp-for="jugador.Nombre" id="NombreJugadorEditar" class="form-control">
        <span class="text-danger" asp-validation-for="jugador.Nombre"></span>
    </div>
        <div class="form-group">
        <label asp-for="jugador.Numero"></label>
        <!-- <input asp-for="jugador.Numero" class="form-control" id="NumeroJugadorEditar" required type="number" min="1" max="99" pattern="^[0-9]$"> -->
        <input asp-for="jugador.Numero" class="form-control" id="NumeroJugadorEditar">
         <span class="text-danger" asp-validation-for="jugador.Numero"></span>
    </div>
    <div class="form-group">
        <label asp-for="EquipoSelected">Seleccione un equipo</label>
        <select asp-for="EquipoSelected" asp-items="@Model.EquipoOptions" name="idEquipo" class="form-control"  id="EquipoJugadorEditar" required></select>
    </div>
    <div class="form-group">
        <label asp-for="PosicionSelected">Seleccione una Posicion</label>
        <select asp-for="PosicionSelected" asp-items="@Model.PosicionOptions" name="idPosicion" class="form-control" id="PosicionJugadorEditar" required></select>
    </div>
    <button type="submit" class="btn btn-primary btn-block mb-2 mt-2" id="BtnJugadorEditar">Editar jugador</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>


