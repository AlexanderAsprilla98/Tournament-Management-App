@page
@model Torneo.App.Frontend.Pages.Equipos.CreateModel
@{
}
@if (Model.duplicate)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Ocurrio un error al crear</strong> El nombre del equipo ya existe.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="$('.alert').alert('close')">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<h1>Nuevo equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre"  id="NombreEquipoCrear" class="form-control" required maxlength="30" pattern="^[a-zA-ZÀ-ÿ \.]*$"
        title="Campo Obligatorio. Solo letras">
    </div>
    <div class="form-group">
        <label for="idMunicipio">Municipio</label>
        <select id="MunicipioEquipoCrear"  name="idMunicipio" class="form-control" required 
        title="Campo Obligatorio">
            @foreach (var municipio in Model.municipios)
            {
                <option value="@municipio.Id">@municipio.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
    <div>
        <label for="idDT">D.T.</label>
        <select id="DTEquipoCrear"  name="idDT" class="form-control" required title="Campo Obligatorio">
            @foreach (var dt in Model.dts)
            {
                <option value="@dt.Id">@dt.Nombre</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary btn-block" id="BtnEquipoCrear">Crear equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>



