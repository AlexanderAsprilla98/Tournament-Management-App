<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Torneo de Fútbol</title>
    <meta name="author" content="MisionTic2022"/>
    <meta name="keywords" content="Torneo de Fútbol, MisionTic2022"/>
    <meta name="description" content="Torneo de Fútbol - MisionTic2022"/>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico"/>
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true"/>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a class="navbar-brand text-light text-decoration-none" asp-area="" asp-page="/Index">
                    <i class="fas fa-futbol me-2"></i>Torneo de Fútbol
                </a>
                <button class="navbar-toggler border-0" 
                        type="button" 
                        data-bs-toggle="collapse" 
                        data-bs-target="#navbarNav"
                        aria-controls="navbarNav" 
                        aria-expanded="false" 
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        @foreach (var navItem in new[]
                        {
                            new { Icon = "fas fa-home", Text = "Home", Page = "/Index" },
                            new { Icon = "fas fa-map-marker-alt", Text = "Municipios", Page = "/Municipios/Index" },
                            new { Icon = "fas fa-user-tie", Text = "Directores Técnicos", Page = "/DTs/Index" },
                            new { Icon = "fas fa-shield-alt", Text = "Equipos", Page = "/Equipos/Index" },
                            new { Icon = "fas fa-football-ball", Text = "Partidos", Page = "/Partidos/Index" },
                            new { Icon = "fas fa-list-ol", Text = "Posiciones", Page = "/Posiciones/Index" },
                            new { Icon = "fas fa-users", Text = "Jugadores", Page = "/Jugadores/Index" },
                            new { Icon = "fas fa-lock", Text = "Privacidad", Page = "/Privacy" }
                        })
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light text-decoration-none" asp-area="" asp-page="@navItem.Page">
                                    <i class="@navItem.Icon me-1"></i>@navItem.Text
                                </a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="footer shadow-sm text-light">
        <div class="container text-center">
            &copy; 2024 - MisionTic2022 - <a asp-area="" asp-page="/Privacy" class="text-light text-decoration-none">Privacidad</a>
        </div> 
    </footer>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>