@page
@model ErrorModel

@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h1 class="card-title">Error</h1>
                </div>
                <div class="card-body">
                    <p class="card-text">An error occurred while processing your request.</p>

                    @if (Model.ShowRequestId)
                    {
                        <p class="card-text">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="alert alert-warning" role="alert">
                        <h4 class="alert-heading">Development Mode Information</h4>
                        <p>
                            The following information is for development purposes only and should not be displayed in a production environment.
                        </p>
                        <hr>
                        <p>
                           To display detailed error information, set the <strong>ASPNETCORE_ENVIRONMENT</strong> environment variable to <strong>Development</strong> in your environment and restart the application.  This should not be done for deployed applications.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
