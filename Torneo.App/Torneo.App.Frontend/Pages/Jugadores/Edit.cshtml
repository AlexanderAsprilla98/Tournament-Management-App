@page
@model Torneo.App.Frontend.Pages.Jugadores.EditModel
@{
}
<h1>Editar jugador</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="jugador.Id"></label>
        <input asp-for="jugador.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="jugador.Nombre"></label>
        <input asp-for="jugador.Nombre" id="NombreJugadorEditar" required maxlength="30" class="form-control" pattern="[A-Za-z\s]*"
        title="Campo Obligatorio. Solo letras">
    </div>
        <div class="form-group">
        <label asp-for="jugador.Numero"></label>
        <input asp-for="jugador.Numero" class="form-control" id="NumeroJugadorEditar" required type="number" min="1" max="99" pattern="^[0-9]*">
    </div>
    <div class="form-group">
        <label asp-for="EquipoSelected">Seleccione un equipo</label>
        <select asp-for="EquipoSelected" asp-items="@Model.EquipoOptions" name="idEquipo" class="form-control"  id="EquipoJugadorEditar" required></select>
    </div>
    <div class="form-group">
        <label asp-for="PosicionSelected">Seleccione una Posicion</label>
        <select asp-for="PosicionSelected" asp-items="@Model.PosicionOptions" name="idPosicion" class="form-control" id="PosicionJugadorEditar" required></select>
    </div>
    <button type="submit" class="btn btn-primary btn-block" id="BtnJugadorEditar">Editar jugador</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>


