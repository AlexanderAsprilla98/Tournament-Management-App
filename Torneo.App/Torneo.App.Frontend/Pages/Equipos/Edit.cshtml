@page
@model Torneo.App.Frontend.Pages.Equipos.EditModel
@{
    ViewData["Title"] = "Editar equipo";
}
@if (Model.duplicate)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Ocurrio un error al crear</strong> El jugador ya existe en el equipo seleccionado.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="$('.alert').alert('close')">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<h1>Editar equipo</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="equipo.Id"></label>
        <input asp-for="equipo.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="equipo.Nombre"></label>
        <input asp-for="equipo.Nombre"  id="NombreEquipoEditar" class="form-control" required maxlength="30" pattern="^[a-zA-ZÀ-ÿ \.]*$"
        title="Campo Obligatorio. Solo letras">
    </div>
    <div class="form-group">
        <label asp-for="MunicipioSelected">Municipio</label>
        <select asp-for="MunicipioSelected"  id="MunicipioEquipoEditar" asp-items="@Model.MunicipioOptions" name="idMunicipio" class="form-control" required></select>
    </div>
    <div class="form-group">
        <label asp-for="DTSelected">D.T.</label>
        <select asp-for="DTSelected" asp-items="@Model.DTOptions" name="idDT" id="DtEquipoEditar" class="form-control" required></select>
    </div>
    <button type="submit" class="btn btn-primary btn-block" id="BtnEquipoEditar">Editar equipo</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>