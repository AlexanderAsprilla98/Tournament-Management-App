@model Torneo.App.Frontend.Pages.Posiciones.CreateModel
@{
}
<h1>Nueva posicion</h1>
<form method="post">
    <div class="form-group">
        <label asp-for="posicion.Nombre"></label>
        <input asp-for="posicion.Nombre" class="form-control" id="NombrePosicionCrear" minlength="3" maxlength="20" pattern="[A-Za-z\s]*" required
        title="Campo Obligatorio. Solo letras">
    </div>
        <button type="submit" class="btn btn-primary btn-block" id="BtnPosicionCrear">Crear posicion</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>
