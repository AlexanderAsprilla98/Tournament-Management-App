@page
@model Torneo.App.Frontend.Pages.Posiciones.EditModel
@{
}
@if (Model.duplicate)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Ocurrio un error al crear</strong> El jugador ya existe en el equipo seleccionado.
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" onclick="$('.alert').alert('close')">
            <span aria-hidden="true">×</span>
        </button>
    </div>
}
<h1>Editar posicion</h1>
@Html.ValidationSummary()
<form method="post">
    <div class="form-group">
        <label asp-for="posicion.Id"></label>
        <input asp-for="posicion.Id" class="form-control" readonly>
    </div>
    <div class="form-group">
        <label asp-for="posicion.Nombre"></label>
        <!-- <input asp-for="posicion.Nombre"  class="form-control" id="NombrePosicionEditar" minlength="3" maxlength="20" pattern="^[a-zA-ZÀ-ÿ \.]*$" required  title="Campo Obligatorio. Solo letras"> -->
        <input asp-for="posicion.Nombre"  class="form-control" id="NombrePosicionEditar">
        <span class="text-danger" asp-validation-for="posicion.Nombre"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block mb-2 mt-2" id="BtnPosicionEditar">Editar posicion</button>
</form>
<a class="btn btn-secondary" asp-page="./Index">Volver</a>